/* ═══════════════════════════════════════════════════════════════
   🎯 MASTER SHREDDER - CLEAN TAILWIND APP LAYOUT
   ═══════════════════════════════════════════════════════════════ */

/* Global app container */
.app-container {
  @apply min-h-screen bg-slate-900;
}

.app-container.loading {
  @apply flex items-center justify-center;
}

.loading-spinner {
  @apply text-center;
}

.loading-spinner .spinner {
  @apply inline-block w-8 h-8 border-4 border-blue-500 border-t-transparent rounded-full animate-spin;
}

/* Header */
.app-header {
  @apply flex items-center justify-between p-4 bg-slate-800 border-b border-slate-700;
}

.brand-section {
  @apply flex items-center gap-3;
}

.app-logo {
  @apply w-10 h-10 object-contain;
}

.brand-text h1 {
  @apply text-xl font-bold text-white;
}

.brand-text p {
  @apply text-sm text-gray-400;
}

.connection-status {
  @apply flex items-center gap-2 text-sm text-gray-300;
}

.status-indicator.connected {
  @apply w-2 h-2 rounded-full bg-green-500;
}

/* Settings button */
.settings-gear-button {
  @apply fixed top-4 right-4 w-10 h-10 bg-slate-700 hover:bg-slate-600 
         border border-slate-600 rounded-lg flex items-center justify-center
         text-gray-300 hover:text-white transition-colors duration-200 z-50;
}

/* Main layout */
.main-layout {
  @apply grid grid-cols-12 gap-4 p-4 h-[calc(100vh-80px)];
}

.panel {
  @apply rounded-xl border border-slate-700 overflow-hidden;
}

.upload-panel {
  @apply col-span-12 lg:col-span-4;
}

.assistant-panel {
  @apply col-span-12 lg:col-span-8;
}

/* Responsive */
@media (max-width: 767px) {
  .main-layout {
    @apply grid-cols-1 gap-2 p-2;
  }
  
  .upload-panel,
  .assistant-panel {
    @apply col-span-1;
  }
}

/* Reset conflicts */
.panel > * {
  background: initial;
  border: initial;
  box-shadow: initial;
}